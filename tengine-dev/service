[Unit]
Description=A web server based on Nginx and has many advanced features
After=syslog.target network.target

[Service]
Type=forking
PIDFile=/run/tengine.pid
ExecStartPre=/usr/sbin/tengine -t -q -g 'pid /run/tengine.pid; daemon on; master_process on;'
ExecStart=/usr/sbin/tengine -g 'pid /run/tengine.pid; daemon on; master_process on;'
ExecReload=/usr/sbin/tengine -g 'pid /run/tengine.pid; daemon on; master_process on;' -s reload
ExecStop=/usr/sbin/tengine -g 'pid /run/tengine.pid;' -s quit

[Install]
WantedBy=multi-user.target
